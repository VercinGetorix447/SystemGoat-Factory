---
const {
  headline = 'Your Trusted Trade Partner',
  subheadline = 'Quality craftsmanship for every project',
  cta = 'Get Free Quote'
} = Astro.props;

const images = [
  { src: '/images/hero/project-1.jpg', alt: 'Kitchen Remodel' },
  { src: '/images/hero/project-2.jpg', alt: 'Bathroom Renovation' },
  { src: '/images/hero/project-3.jpg', alt: 'Deck Construction' },
  { src: '/images/hero/project-4.jpg', alt: 'Home Addition' },
  { src: '/images/hero/project-5.jpg', alt: 'Exterior Work' },
];

const positions = [
  { top: '5%', left: '5%', rotate: '-8deg' },
  { top: '10%', left: '55%', rotate: '6deg' },
  { top: '35%', left: '25%', rotate: '-3deg' },
  { top: '40%', left: '60%', rotate: '10deg' },
  { top: '20%', left: '40%', rotate: '-5deg' },
];
---

<section class="hero-gallery">
  <div class="gallery-container">
    {images.map((img, i) => (
      <div
        class="gallery-card"
        data-index={i}
        style={`top: ${positions[i].top}; left: ${positions[i].left}; transform: rotate(${positions[i].rotate});`}
      >
        <img src={img.src} alt={img.alt} loading="eager" />
      </div>
    ))}
  </div>

  <div class="hero-content">
    <h1>{headline}</h1>
    <p>{subheadline}</p>
    <a href="#contact" class="cta-button">{cta}</a>
  </div>
</section>

<style>
  .hero-gallery {
    position: relative;
    min-height: 90vh;
    background: linear-gradient(135deg, #F9F7F4 0%, #EDE9E3 50%, #F9F7F4 100%);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .gallery-container {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .gallery-card {
    position: absolute;
    width: 280px;
    height: 200px;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
    transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    z-index: 1;
    opacity: 0.7;
    filter: brightness(0.8);
  }

  .gallery-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gallery-card.active {
    z-index: 10;
    opacity: 1;
    filter: brightness(1);
    transform: scale(1.15) rotate(0deg) !important;
    box-shadow:
      0 0 60px rgba(255, 107, 53, 0.5),
      0 20px 60px rgba(0, 0, 0, 0.3);
    border: 3px solid rgba(255, 107, 53, 0.8);
  }

  .gallery-card::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      transparent 60%,
      rgba(0, 0, 0, 0.6) 100%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .gallery-card.active::after {
    opacity: 1;
  }

  .hero-content {
    position: relative;
    z-index: 20;
    text-align: center;
    padding: 2rem;
    max-width: 700px;
  }

  .hero-content h1 {
    font-size: 3.5rem;
    font-weight: 800;
    color: #1a1a1a;
    margin-bottom: 1rem;
    text-shadow: 0 2px 10px rgba(255, 255, 255, 0.5);
    line-height: 1.1;
  }

  .hero-content p {
    font-size: 1.4rem;
    color: #4a4a4a;
    margin-bottom: 2rem;
  }

  .cta-button {
    display: inline-block;
    background: linear-gradient(135deg, #FF6B35 0%, #e55a2b 100%);
    color: #fff;
    font-size: 1.2rem;
    font-weight: 600;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(255, 107, 53, 0.4);
  }

  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(255, 107, 53, 0.6);
  }

  @media (max-width: 1024px) {
    .gallery-card {
      width: 200px;
      height: 140px;
    }
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2.5rem;
    }
    .gallery-card {
      width: 150px;
      height: 100px;
      opacity: 0.5;
    }
    .gallery-card.active {
      opacity: 0.9;
    }
  }
</style>

<script>
  const cards = document.querySelectorAll('.gallery-card');
  const total = cards.length;
  let currentIndex = Math.floor(Math.random() * total);

  function highlightCard() {
    cards.forEach(card => card.classList.remove('active'));
    cards[currentIndex].classList.add('active');

    // Pick next random index (different from current)
    let nextIndex;
    do {
      nextIndex = Math.floor(Math.random() * total);
    } while (nextIndex === currentIndex);
    currentIndex = nextIndex;
  }

  // Initial highlight
  highlightCard();

  // Rotate every 3 seconds
  setInterval(highlightCard, 3000);
</script>
