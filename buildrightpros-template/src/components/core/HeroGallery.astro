---
const {
  headline = 'Your Trusted Trade Partner',
  subheadline = 'Stop working for your business. Make your business work for you.',
  cta = 'Get Free Quote'
} = Astro.props;

const v = Date.now();
const images = [
  { src: `/images/hero/project-1.jpg?v=${v}`, alt: 'Roofing' },
  { src: `/images/hero/project-2.jpg?v=${v}`, alt: 'Pool Cleaning' },
  { src: `/images/hero/project-3.jpg?v=${v}`, alt: 'HVAC' },
];

// 3 overlapping: stacked, each lower, middle shifted right, group pushed right
const positions = [
  { top: '10%', left: '35%', rotate: '0deg' },
  { top: '30%', left: '55%', rotate: '0deg' },
  { top: '50%', left: '35%', rotate: '0deg' },
];
---

<section class="hero-gallery">
  <div class="gallery-container">
    {images.map((img, i) => (
      <div
        class="gallery-card"
        data-index={i}
        style={`top: ${positions[i].top}; left: ${positions[i].left}; transform: rotate(${positions[i].rotate});`}
      >
        <img src={img.src} alt={img.alt} loading="eager" />
      </div>
    ))}
  </div>

  <div class="hero-content">
    <h1 class="slogan">WE BUILD SYSTEMS THAT<br/>HELP YOUR SYSTEMS BUILD</h1>
    <p>{subheadline}</p>
    <a href="#contact" class="cta-button">{cta}</a>
  </div>
</section>

<style>
  .hero-gallery {
    position: relative;
    min-height: 90vh;
    background: linear-gradient(135deg, var(--bg-main) 0%, var(--bg-alt) 50%, var(--bg-main) 100%);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .gallery-container {
    position: absolute;
    top: 0;
    right: 0;
    width: 75%;
    height: 100%;
    pointer-events: none;
  }

  .gallery-card {
    position: absolute;
    width: 300px;
    height: 210px;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    z-index: 1;
    opacity: 0.85;
    filter: brightness(0.9);
  }

  /* First card (center) on top */
  .gallery-card[data-index="0"] { z-index: 3; opacity: 1; filter: brightness(1); }
  .gallery-card[data-index="1"] { z-index: 2; }
  .gallery-card[data-index="2"] { z-index: 2; }

  .gallery-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gallery-card.active {
    z-index: 10;
    opacity: 1;
    filter: brightness(1);
    transform: scale(1.15) rotate(0deg) !important;
    box-shadow:
      0 0 60px rgba(var(--accent-rgb), 0.5),
      0 20px 60px rgba(0, 0, 0, 0.3);
    border: 3px solid rgba(var(--accent-rgb), 0.8);
  }

  .gallery-card::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      transparent 60%,
      rgba(0, 0, 0, 0.6) 100%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .gallery-card.active::after {
    opacity: 1;
  }

  .hero-content {
    position: absolute;
    left: 3%;
    top: 50%;
    transform: translateY(-50%);
    z-index: 20;
    text-align: left;
    padding: 2rem;
    max-width: 45%;
  }

  .hero-content h1.slogan {
    font-family: 'Titan One', cursive;
    font-size: 2.8rem;
    font-weight: 400;
    color: var(--dark);
    margin-bottom: 1.5rem;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .hero-content p {
    font-size: 1.4rem;
    color: var(--text-light);
    margin-bottom: 2rem;
  }

  .cta-button {
    display: inline-block;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-hover) 100%);
    color: #fff;
    font-size: 1.2rem;
    font-weight: 600;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(var(--accent-rgb), 0.4);
  }

  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(var(--accent-rgb), 0.6);
  }

  @media (max-width: 1024px) {
    .gallery-card {
      width: 220px;
      height: 155px;
    }
  }

  @media (max-width: 768px) {
    .hero-content {
      position: relative;
      left: 0;
      top: 0;
      transform: none;
      max-width: 100%;
      text-align: center;
      padding-top: 3rem;
    }
    .hero-content h1.slogan {
      font-size: 2rem;
    }
    .gallery-container {
      position: relative;
      width: 100%;
      height: 280px;
      margin-top: 2rem;
    }
    .gallery-card {
      width: 140px;
      height: 100px;
    }
  }
</style>

<script>
  const cards = document.querySelectorAll('.gallery-card');
  const total = cards.length;
  let currentIndex = Math.floor(Math.random() * total);

  function highlightCard() {
    cards.forEach(card => card.classList.remove('active'));
    cards[currentIndex].classList.add('active');

    // Pick next random index (different from current)
    let nextIndex;
    do {
      nextIndex = Math.floor(Math.random() * total);
    } while (nextIndex === currentIndex);
    currentIndex = nextIndex;
  }

  // Initial highlight
  highlightCard();

  // Rotate every 3 seconds
  setInterval(highlightCard, 3000);
</script>
