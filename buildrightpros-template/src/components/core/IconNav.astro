---

<nav class="icon-nav">
  {sections.map(s => (
    <a href={`#${s.id}`} class="icon-nav-item">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d={s.icon} />
      </svg>
      <span>{s.label}</span>
    </a>
  ))}
</nav>

<style>
  .icon-nav {
    display: flex;
    justify-content: center;
    gap: 0;
    background: #FFFFFF;
    border-bottom: 1px solid #E8E4DF;
    padding: 0;
  }

  .icon-nav-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.4rem;
    padding: 1.25rem 1rem;
    text-decoration: none;
    color: #444;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    transition: color 0.2s, background 0.2s;
    border-right: 1px solid #F0EDE8;
  }

  .icon-nav-item:last-child {
    border-right: none;
  }

  .icon-nav-item:hover {
    color: var(--accent, #FF6B35);
    background: #FAFAF8;
  }

  .icon-nav-item svg {
    width: 28px;
    height: 28px;
  }

  @media (max-width: 600px) {
    .icon-nav-item span { font-size: 0.65rem; }
    .icon-nav-item svg { width: 22px; height: 22px; }
    .icon-nav-item { padding: 0.85rem 0.5rem; }
  }
</style>
