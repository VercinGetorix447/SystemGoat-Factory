---
const {
  headline = 'Your Trusted Trade Partner',
  subheadline = '',
  cta = 'Get Quote',
  bgImage = '',
  overlay = true
} = Astro.props;
---
<section
  class="relative bg-brand-dark p-16 text-center shadow-lg mx-4 my-8 rounded-lg overflow-hidden min-h-[400px] flex flex-col justify-center"
  style={bgImage ? `background-image: url('${bgImage}'); background-size: cover; background-position: center;` : ''}
>
  {overlay && bgImage && <div class="absolute inset-0 bg-black/50"></div>}
  <div class="relative z-10">
    <h1 class="font-header text-4xl md:text-5xl mb-4 text-white animate-fade-in">{headline}</h1>
    {subheadline && <p class="text-xl text-gray-200 mb-6 opacity-0 animate-slide-up">{subheadline}</p>}
    <button class="bg-brand-accent hover:bg-blue-600 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-all duration-300 hover:scale-105 opacity-0 animate-slide-up-delay">{cta}</button>
  </div>
</section>
