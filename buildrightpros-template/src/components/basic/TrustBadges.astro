---
const { badges = ['Licensed', 'Insured', 'Free Estimates', 'Satisfaction Guaranteed'] } = Astro.props;
---
<section class="bg-brand-light py-8 px-4">
  <div class="flex flex-wrap justify-center gap-6 md:gap-12">
    {badges.map((badge, i) => (
      <div
        class="flex items-center gap-2 text-brand-dark opacity-0 animate-fade-in"
        style={`animation-delay: ${i * 0.15}s`}
      >
        <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span class="font-semibold">{badge}</span>
      </div>
    ))}
  </div>
</section>
