  />

  <TrustBadges badges={['Licensed & Insured', 'Eco-Friendly Products', 'Same-Day Service', '100% Satisfaction']} />

  <section class="py-16 px-4 max-w-6xl mx-auto">
    <h2 class="font-header text-3xl text-center mb-12 animate-fade-in">Our Pressure Washing Services</h2>
    <ServiceCards services={services} />
  </section>

  <section class="bg-gray-50 py-16 px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="font-header text-3xl text-center mb-8 animate-fade-in">Why Choose Us?</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center opacity-0 animate-slide-up" style="animation-delay: 0.1s">
          <div class="text-5xl mb-4">ðŸ’§</div>
          <h3 class="font-header text-xl mb-2">Expert Equipment</h3>
          <p class="text-gray-600">Commercial-grade pressure washers for any job size</p>
        </div>
        <div class="text-center opacity-0 animate-slide-up" style="animation-delay: 0.2s">
